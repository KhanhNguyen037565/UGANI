<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/StyleCSS/layout.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Ugani Restaurant</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("TRANG CHỦ", "Index", "Home", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("VỀ CHÚNG TÔI", "About", "#", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("ĐẶT BÀN", "Booking", "Home", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <a href="#contact" class="nav-link">LIÊN HỆ</a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
    </div>
    <div id="contact" class="row footer">
        <div class="col-5 content">
            <div class=" row contact">
                <h3>Liên hệ</h3>

                <p class="address">
                    <i class="fa-solid fa-location-dot"></i>
                    53, Điện Biên Phủ, Đa Kao, Quận 1, Thành phố Hồ Chí Minh
                </p>
                <p class="time">
                    <i class="fa-solid fa-calendar-days"></i>
                    Mon - Sun: 11am - 10pm
                </p>
                <p class="phone">
                    <i class="fa-solid fa-phone"></i>
                    +84926632116
                </p>
            </div>
            <div class=" row fanpage">
                <h3>Fanpage</h3>
                <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Fceramicsstore16%2F&tabs=timeline&width=340&height=70&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=false&appId"
                        width="340" height="70" style="border:none;overflow:hidden" scrolling="no" frameborder="0"
                        allowfullscreen="true"
                        allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"></iframe>
            </div>
        </div>
        <div class="col-7 map">
            <div class="map_show">
                <h3>Map</h3>
                <iframe class="check-in" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.2724810761174!2d106.69318562308179!3d10.790430467721887!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528cac332beeb%3A0x82b47003fe853c54!2zNTMgxJBp4buHbiBCacOqbiBQaOG7pywgxJBhIEthbywgUXXhuq1uIDMsIFRow6BuaCBwaOG7kSBI4buTIENow60gTWluaCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1678717863825!5m2!1svi!2s" width="600" height="260" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
<script src="https://cdn.jsdelivr.net/npm/bs5-lightbox@1.8.3/dist/index.bundle.min.js"></script>
<script src="~/Scripts/bootstrap.bundle.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
</html>
