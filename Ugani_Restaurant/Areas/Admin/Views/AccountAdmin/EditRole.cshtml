@model Ugani_Restaurant.Models.EditRoleViewModel

@{
    ViewBag.Title = "EditRole";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditRole", "AccountAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserId)

<div class="form-group">
    @Html.LabelFor(model => model.Role, new { @class = "control-label" })
    @Html.DropDownList("Role", null, htmlAttributes: new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
</div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}
